# CeesarCode Environment Configuration
# Copy this file to .env in the project root and fill in the values

# ============================================
# Environment Configuration
# ============================================
# Options: dev, gamma, prod
APP_ENV=dev

# Server Configuration
PORT=8080
FRONTEND_ORIGIN=http://localhost:5173

# ============================================
# AI Provider Configuration
# ============================================
# At least one AI provider key is recommended for AI question generation

# Google Gemini (Free tier available)
# Get your key at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# OpenAI GPT
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic Claude
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Default AI provider: gemini, openai, claude
DEFAULT_AI_PROVIDER=gemini

# ============================================
# Executor Configuration
# ============================================
# Options: docker, firecracker, stub
EXECUTOR_MODE=stub

# Firecracker settings (if using)
FC_KERNEL=
FC_ROOTFS=

# ============================================
# Logging Configuration
# ============================================
# Options: debug, info, warn, error
LOG_LEVEL=info

# ============================================
# Feature Flags
# ============================================
# Enable/disable pair programming agent
ENABLE_PAIR_PROGRAMMING=true

# Enable/disable system design agent
ENABLE_SYSTEM_DESIGN_AGENT=true

# Enable web search for AI question generation
ENABLE_WEB_SEARCH=true

